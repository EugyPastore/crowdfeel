<div class="container landing mt-4">
  <div class="landing-text">
    <h1 class="header-landing">Get to <span class="landing-word">know</span><br>your crowd</h1>
    <h6 class="mt-4"><span class="landing-word">About Your Crowd</span> lets you find out what your audience<br>thinks of your brand, company or product in just <span class="landing-word">3</span> steps!</h6>
    <div class="buttons-landing mt-4">
    <% if user_signed_in? %>
      <%= link_to "Your dashboard", my_dashboard_path, class: "button-primary link" %>
    <% else %>
      <%#= link_to "Login", new_user_session_path, class: "button-primary link" %>

      <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="container mt-4">
          <div class="row justify-content-center">
            <div class="col-6">
              <div class="container device-card p-4">
                    <h2>Log in</h2>
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="form-inputs">
                        <%= f.input :email,
                                    required: false,
                                    autofocus: true,
                                    input_html: { autocomplete: "email" } %>
                        <%= f.input :password,
                                    required: false,
                                    input_html: { autocomplete: "current-password" } %>
                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                      </div>
                      <div class="form-actions">
                        <%= f.button :submit, "Log in", class: "button-primary mb-4" %>
                      </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>













      <%= link_to "Register", new_user_session_path, class: "button-secondary link" %>
    <% end %>
    </div>
  </div>
</div>
