<h5 class="saved">My hashtags</h5>

      <% if @my_hashtags.present?%>
          <ul class="saved-hashtags-list">
            <% @my_hashtags.each do |hashtag| %>
              <li class="saved-hashtag-card">
                <% link_to hashtag.name %>
                <%= hashtag.name.capitalize %>
                <a data-confirm="Are you sure?" data-method="delete" href="hashtags/<%= hashtag.id %>">
                  <i class="fas fa-trash"></i>
                </a>
              </li>
            <% end %>
        <% else %>
          <div class="name-alert" role="alert">
            No saved hashtags.
          </div>
          </ul>
      <% end %>
