<div class="container dashboard mt-4">
  <div class="row">
    <div class="col-3 d-flex column justify-content-between">
<!--Dashboard LEFT Side Username and my hashtags ------>
      <div>
        <a href="/my-dashboard"><%= image_tag "logo5.png", class: "logo" %></a>
        <h6 class="mt-4 username">Logged in as <%= @user.name  %></h4>
        <%= render "dashboards/my_hashtags" %>
      </div>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "button-secondary link-dashboard-secondary" %>
    </div>
<!--Dashboard RIGHT Side---------------------------->
    <div class="col-9">
          <%= render "dashboards/info_field" %>
          <%= render "dashboards/search_hashtag" %>
<!--Happiness score and Chart---------------------------->
            <% if @score.present? %>
              <div class="output-info">
                <%= render "dashboards/happiness_chart" %>
            <% else %>
              <div class="output-info">
                <%= render "dashboards/last_searches" %>
              </div>
            <% end %>

<!---Save bookmark and Update score ---------->
          <% if @hashtag.present? %>
            <% if Hashtag.find_by(name: @hashtag) %>
              <%= link_to "Update ##{params[:name].capitalize}", hashtags_path(name: @hashtag, score: @score), class: "button-secondary link-dashboard-secondary", method: :post  %>
            <% else %>
              <%= link_to "Bookmark ##{params[:name].capitalize}", hashtags_path(name: @hashtag, score: @score), class: "button-secondary link-dashboard-secondary", method: :post  %>
            <% end %>
          <% end %>
    </div>
  </div>
</div>
